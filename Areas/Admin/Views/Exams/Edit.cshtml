@model Exam
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Create Exam </h3>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form   method="post" enctype="multipart/form-data" role="form"
                        asp-controller="Exams" asp-action="Save" asp-area="Admin">
                        <input type="hidden" asp-for="ExamId" />
                        <input type="hidden" asp-for="CreateDate" />
                        <input type="hidden" asp-for="CreatedBy" />
                        <input type="hidden" asp-for="UpdateDate" />
                        <input type="hidden" asp-for="UpdatedBy" />
                        <input type="hidden" asp-for="CurrentState" />
                        <fieldset>
                            <div class="form-group">
                                <label for="ExamTitle">Exam Title</label>
                                <input id="ExamTitle" class="form-control" type="text" required asp-for="ExamTitle">
                                <span asp-validation-for="ExamTitle" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Notes">Exam Description</label>
                                <textarea id="Notes" class="form-control" asp-for="ExamDescription"></textarea>
                                <span asp-validation-for="ExamDescription" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Notes">Notes</label>
                                <textarea id="Notes" class="form-control" asp-for="Notes"></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input id="Publish" type="checkbox" asp-for="isPublish"></input>
                                <label for="Publish">Publich</label>
                                <span asp-validation-for="isPublish" class="text-danger"></span>
                            </div>

                            <input class="btn btn-primary btn-fw" type="submit" value="Submit">
                            <a class="btn btn-secondary btn-fw" asp-controller="Exams" asp-action="List" asp-area="Admin">Cancel</a>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}