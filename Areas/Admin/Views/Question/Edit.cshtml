@model MCQ
@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .form-container {
            max-width: 800px;
            margin: 0 auto;
        }

        .choice-item {
            border-left: 4px solid #0d6efd;
            transition: all 0.2s ease;
        }

            .choice-item:hover {
                background-color: rgba(13, 110, 253, 0.05);
            }

        .correct-option {
            background-color: rgba(25, 135, 84, 0.1);
            border-color: #198754 !important;
        }

        .card-header {
            background-color: #f8f9fa;
        }

        .choice-label {
            font-weight: 500;
        }

        .radio-label {
            cursor: pointer;
            transition: all 0.2s ease;
        }

            .radio-label:hover {
                color: #0d6efd;
            }

        .form-check-input:checked + .form-check-label {
            font-weight: 600;
            color: #198754;
        }
    </style>
}
<div class="bg-light">
    <div class="container py-4">
        <div class="form-container">
            <div class="card shadow-sm">
                <div class="card-header py-3">
                    <h3 class="card-title mb-0"><i class="bi bi-pencil-square me-2"></i>Create New Question</h3>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data" asp-controller="Question" asp-action="Save" asp-area="Admin" role="form">

                        <input type="hidden" asp-for="@Model.question.ExamId"/>
                        <input type="hidden" asp-for="@Model.question.QuestionId"/>
                        <div class="mb-4">
                            <label for="questionText" class="form-label fw-bold">Question</label>
                            <textarea class="form-control" id="questionText" rows="4"
                            placeholder="Enter your question here..." required asp-for="@Model.question.QuestionTitle"></textarea>
                            <span asp-validation-for="@Model.question.QuestionTitle" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <h4 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-list-ul me-2"></i>Choices
                            </h4>

                            @for (int i = 0; i < Model.choices.Count; i++)
                            {
                                <input type="hidden" asp-for="@Model.choices[i].ChoiceId"/>
                                <div class="choice-item card mb-3 p-3">
                                    <div class="row g-3 align-items-center">
                                        <div class="col-md-1 text-center">
                                            <div class="choice-label text-primary">@(i+1)</div>
                                        </div>
                                        <div class="col-md-8">
                                            <input type="text" class="form-control" placeholder="Enter choice text" required asp-for="@Model.choices[i].ChoiceText">
                                            <span asp-validation-for="@Model.choices[i].ChoiceText" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" value="@i"
                                                       name="correctChoice" asp-for="@Model.choices[i].IsCorrect" id="choice@(i+1)">
                                                <label class="form-check-label radio-label" for="choice@(i+1)">
                                                    <i class="bi bi-check-circle me-1"></i>Correct Answer
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            

                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a type="button" class="btn btn-outline-secondary" asp-controller="Question" asp-action="List" asp-area="Admin" asp-route-ExamId="@Model.question.ExamId">
                                <i class="bi bi-x-circle me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle me-1"></i>Save Question
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    

</div>
@section Scripts{
    <script>
        document.querySelectorAll('input[name="correctChoice"]').forEach(radio => {
            radio.addEventListener('change', function() {
                document.querySelectorAll('.choice-item').forEach(item => {
                    item.classList.remove('correct-option');
                });

                this.closest('.choice-item').classList.add('correct-option');
            });
        });

        document.getElementById('choice1').closest('.choice-item').classList.add('correct-option');
    </script>
}