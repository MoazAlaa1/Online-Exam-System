@model List<VwQuestionWithChoices>
@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .question-item {
        border-left: 4px solid #b66dff;
        transition: all 0.3s ease;
        }

        .question-item:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }

        .correct-option {
        background-color: rgba(25, 135, 84, 0.1);
        border: 1px solid rgba(25, 135, 84, 0.3);
        border-radius: 0.375rem;
        }

        .option-item {
        transition: all 0.2s ease;
        }

        .option-item:hover {
        background-color: rgba(0, 0, 0, 0.03);
        }
    </style>
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title"> Exam </h3>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Questions Management</h4>
                        <a class="btn btn-success" asp-controller="Question" asp-action="Edit" asp-area="Admin" asp-route-examId="@ViewBag.examId">
                            <i class="bi bi-plus-circle me-2"></i>Add Question
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div id="Existing-Questions">
                        @if(Model != null && Model.Count >0)
                        {
                            @for (int i = 3; i < Model.Count; i+=4)
                            {
                                <div class="question-item card mb-3">
                                    <div class="card-body">
                                        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-3">
                                            <h5 class="card-title mb-2 mb-md-0">@Model[i].QuestionTitle</h5>
                                            <div class="d-flex gap-2">
                                                <a class="btn btn-outline-primary btn-sm" asp-controller="Question" asp-action="Edit" asp-area="Admin" asp-route-id="@Model[i].QuestionId">
                                                    <i class="bi bi-pencil me-1"></i>Edit
                                                </a>
                                                <a class="btn btn-outline-danger btn-sm" asp-controller="Question" asp-action="Delete" asp-area="Admin" asp-route-id="@Model[i].QuestionId" asp-route-examId="@Model[i].ExamId">
                                                    <i class="bi bi-trash me-1"></i>Delete
                                                </a>
                                            </div>
                                        </div>
                                        <ul class="list-group list-group-flush">
                                            
                                            @for (int j = i-3; j <= i; j++)
                                            {
                                                @if (Model[j].IsCorrect == true)
                                                {
                                                    <li class="list-group-item option-item correct-option d-flex align-items-center">
                                                        <span class="me-2">@(j+4-i).</span> @Model[j].ChoiceText
                                                        <span class="badge bg-success ms-auto">
                                                            <i class="bi bi-check-circle me-1"></i>Correct
                                                        </span>
                                                    </li>
                                                }
                                                else
                                                {
                                                    <li class="list-group-item option-item d-flex align-items-center">
                                                        <span class="me-2">@(j + 4 - i).</span> @Model[j].ChoiceText
                                                    </li>
                                                }
                                            }
                                         
                                        </ul>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <h3>There are no Questions.</h3>
                        }
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
