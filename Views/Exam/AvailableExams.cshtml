@model List<Exam>    
<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-5 fw-bold mb-3">Available Exams</h1>
                <p class="lead mb-0">Browse through our comprehensive collection of exams and tests to enhance your knowledge and skills.</p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <div class="bg-white rounded p-3 d-inline-block">
                    <div class="text-primary fw-bold fs-4">@Model.Count</div>
                    <div class="text-muted small">Exams Available</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Exams Grid Section -->
<section class="py-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-bold">All Exams</h3>
        </div>

        <div class="row g-4" id="examsGrid">
            @if(Model != null && Model.Count > 0)
            {
                @for (int i = 0; i < Model.Count;i++)
                {
                    <!-- Exam Card 1 -->
                    <div class="col-xl-4 col-lg-6">
                        <div class="card exam-card h-100 shadow-sm">
                            <div class="card-body position-relative">
                                <h5 class="card-title">@Model[i].ExamTitle</h5>
                                <p class="card-text text-muted">
                                    @Model[i].ExamDescription
                                </p>
                                <div class="mb-3">
                                    <span class="exam-difficulty badge bg-warning text-dark">
                                        <i class="bi bi-bar-chart me-1"></i>Notes
                                    </span>
                                </div>
                               
                                <div class="d-flex justify-content-between text-muted small mb-2" id="Notes" style="display:none;">
                                    <span>@Model[i].Notes</span>
                                </div>

                                <div class="d-flex justify-content-between text-muted small mb-3">
                                    <span><i class="bi bi-person me-1"></i> Max Attempts: unlimited</span>
                                    <span><i class="bi bi-award me-1"></i> Passing Percentage: 60%</span>
                                </div>

                                <div class="d-grid gap-2">
                                    <a asp-controller="Exam" asp-action="StartExam" asp-route-ExamId="@Model[i].ExamId" class="btn btn-exam-primary">
                                        <i class="bi bi-play-circle me-1"></i>Start Exam
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            

        </div>

        
    </div>
</section>

