@model List<Exam>

<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Welcome to Online Exam System</h1>
                <p class="lead mb-4">Take your exams anytime, anywhere with our secure and reliable online examination platform. Practice, test your knowledge, and track your progress.</p>
                <div class="d-flex gap-3 flex-wrap">
                    <a asp-controller="Exam" asp-action="AvailableExams" class="btn btn-light btn-lg px-4 py-2 fw-semibold">
                        <i class="bi bi-journal-text me-2"></i>Start Exam
                    </a>

                </div>
            </div>
            <div class="col-lg-6 text-center">
                @* <img src="~/Images/online-exam-concept-choose-correct-Copy.jpg" alt="Online Exam" class="img-fluid" style="max-height: 400px;"> *@
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Why Choose Our Platform?</h2>
            <p class="text-muted">Experience the best online examination system with these features</p>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card feature-card h-100 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                            <i class="bi bi-clock text-white fs-3"></i>
                        </div>
                        <h4 class="card-title">Flexible Timing</h4>
                        <p class="card-text text-muted">Take exams at your convenience with our 24/7 available platform from any device.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card feature-card h-100 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-success rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                            <i class="bi bi-shield-check text-white fs-3"></i>
                        </div>
                        <h4 class="card-title">Secure & Reliable</h4>
                        <p class="card-text text-muted">Advanced security measures to ensure the integrity of your examinations.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card feature-card h-100 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-info rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                            <i class="bi bi-graph-up text-white fs-3"></i>
                        </div>
                        <h4 class="card-title">Instant Results</h4>
                        <p class="card-text text-muted">Get immediate feedback and detailed analytics on your performance.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="py-5 bg-light">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold">Available Exams</h2>
            <a asp-controller="Exam" asp-action="AvailableExams" class="btn btn-outline-primary">View All Exams</a>
        </div>

        <div class="row g-4">
            @if(Model != null && Model.Count > 0)
            {
                @for(int i = 0 ; i < Model.Count;i++)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card exam-card h-100 shadow-sm">
                            <div class="card-body">
                                @if(Model[i].CreateDate.Month == DateTime.Now.Month )
                                {
                                    <span class="badge bg-success mb-2">New</span>
                                }
                                <h5 class="card-title">@Model[i].ExamTitle</h5>
                                <p class="card-text text-muted">@Model[i].ExamDescription</p>
                                <div class="d-flex justify-content-between text-muted small mb-3">
                                    <span><i class="bi bi-clock me-1"></i> NO Time</span>
                                    <span><i class="bi bi-question-circle me-1"></i> Passing Percentage: 60%</span>
                                </div>
                                <a asp-controller="Exam" asp-action="StartExam" asp-route-ExamId="@Model[i].ExamId" class="btn btn-exam-primary w-100">Start Exam</a>
                            </div>
                        </div>
                    </div>
                }
            }
           

        </div>
    </div>
</section>


<section class="py-5 stats-section">
    
</section>